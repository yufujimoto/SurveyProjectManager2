<h2>Projects</h2>
<hr />
<%= button_to 'New Project', new_project_path, {method: :get, :class => "btn btn-success", :style => "width: 150px; border-radius: 0 !important;"} %>
<hr />

<table>
  <thead>
    <tr>
      <th style="width: 300px">Name</th>
      <th style="width: 300px">Title</th>
      <th style="width: 100px">Begining</th>
      <th style="width: 100px">Ending</th>
      <th style="width: 100px">Phase</th>
      <th style="width: auto">Control</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr class="zebra">
        <td><%= project.name %></td>
        <td><%= project.title %></td>
        <td><%= project.begining %></td>
        <td><%= project.ending %></td>
        <td><%= project.phase %></td>
        <td><div class="btn-group">
          <%= button_to 'Show', project, {method: :get, :class => "btn btn-primary", :style => "width: 90px; border-radius: 0 !important;"} %>
          <%= button_to 'Edit', edit_project_path(project), {method: :get, :class => "btn btn-warning", :style => "width: 90px; border-radius: 0 !important;"} %>
          <%= button_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => "width: 90px; border-radius: 0 !important;" %>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />




